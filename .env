# Telegram Poster Bot Environment Variables
# Copy this to .env and fill in your values

# ===== REQUIRED =====

# Telegram Bot Token (from @BotFather)
AMANBOTZ_BOT_TOKEN=your_bot_token_here

# Telegram API credentials (from my.telegram.org)
AMANBOTZ_API_ID=your_api_id
AMANBOTZ_API_HASH=your_api_hash

# MongoDB URI (from MongoDB Atlas or local)
AMANBOTZ_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Owner Telegram User ID
AMANBOTZ_OWNER_ID=your_telegram_user_id

# ===== API KEYS (At least one required) =====

# OMDB API Key (from http://www.omdbapi.com/apikey.aspx)
AMANBOTZ_OMDB_API=your_omdb_api_key

# TMDB API Key (from https://www.themoviedb.org/settings/api) - Optional if OMDB is provided
AMANBOTZ_TMDB_API=

# ===== OPTIONAL =====

# Log Channel ID (for bot logs)
AMANBOTZ_LOG_CHANNEL=0

# Auto-post channel (can be set via bot)
AMANBOTZ_AUTO_POST_CHANNEL=0

# Database name
AMANBOTZ_DB_NAME=amanbotz_poster_bot

# Bot name
AMANBOTZ_BOT_NAME=Poster Bot

# Check interval for new releases (in hours)
AMANBOTZ_CHECK_INTERVAL=6

